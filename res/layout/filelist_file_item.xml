<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/groupItemHeight"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fileListItemVericalPadding"
    android:paddingLeft="@dimen/fileListItemHorizonPadding"
    android:paddingRight="@dimen/fileListItemHorizonPadding"
    android:paddingTop="@dimen/fileListItemVericalPadding" >

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginRight="5dp"
         />

    <TextView
        android:id="@+id/file_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right" />

</LinearLayout>