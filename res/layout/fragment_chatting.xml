<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_mainview_header"
        android:background="@drawable/theme_header_gradientblue"
        android:gravity="center"
         >

        <TextView
            android:id="@+id/header_chatting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chatting"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/chatting_List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:entries="@array/books"
        android:divider="#676767"
        android:dividerHeight="10dp"
        android:textSize="20sp" />

</LinearLayout>